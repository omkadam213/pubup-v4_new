<body>
    <div class="login-box">
        <h2>Register</h2>
        <form action="/register" method="POST">
            <div class="user-box">
                <input type="text" name="" required="">
                <label>Username</label>
            </div>
            <div class="user-box">
                <input type="password">
                <label>Password</label>
            </div>

            <div class="user-box">
                <input type="number" name="" required="">
                <label>Mobile Number</label>
            </div>
            <div class="user-box">
                <input type="date">
                <label for="">Birth Date</label>
            </div>
            <div class="user-box">
                <input type="email" name="" required="">
                <label>Email</label>
            </div>
            <div>
                <a href="">
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span> Register
                </a>



            </div>

        </form>
    </div>
</body>

